<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_network_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="110dp"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="gone">

    <ImageView
        android:id="@+id/search_network_error_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_search_network_error"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/search_network_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/SearchNetworkErrorText"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retrySearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        style="@style/SearchRetryButton" />
</LinearLayout>