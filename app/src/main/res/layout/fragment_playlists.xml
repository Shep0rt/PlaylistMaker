<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_playlists_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker.MediaLibrary"
    tools:context=".presentation.media.playlist.PlaylistsFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_playlist_button"
        style="@style/NewPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/no_playlists_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_search_not_result"
        android:layout_marginTop="46dp"/>

    <TextView
        android:id="@+id/no_playlists_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        style="@style/MediaLibraryNoPlaylistText" />

</LinearLayout>