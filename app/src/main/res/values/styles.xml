<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--activity_main -->
    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/main_button_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/main_button_margin_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/main_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!--activity_settings -->
    <style name="SettingsText">
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/gray</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>