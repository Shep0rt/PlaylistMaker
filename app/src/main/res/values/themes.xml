        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.PlaylistMaker.Main" parent="Base.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="Theme.PlaylistMaker.Settings" parent="Base.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOutline">@color/gray</item>
    </style>

    <style name="Theme.PlaylistMaker.Search" parent="Base.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/white</item>
