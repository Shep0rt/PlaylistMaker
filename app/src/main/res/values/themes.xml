        <item name="colorSurfaceVariant">@color/light_gray</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorItemTrack">@color/gray</item>
    </style>

    <style name="Theme.PlaylistMaker.MediaLibrary" parent="Base.Theme.PlaylistMaker">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSurface">@color/black</item>
